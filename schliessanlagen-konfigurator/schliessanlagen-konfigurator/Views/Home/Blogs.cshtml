                    <div class="row">
                        <div >
                            <div class="form-group">
                               <label>Name </label>
                               <input asp-for="Name" type="text" name="Name" class="form-control" />
                            </div>
                        </div>
                        <div>
                            <div class="form-group">
                                <label>Descriptions </label>
                                <textarea asp-for="Description" name="Descriptions" id="discriptions" class="form-control"> 
                                    test
                                  </textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>


            @using (Html.BeginForm("Blogs", "Home", FormMethod.Get, new { @class = "shadow-lg p-3 mb-5 bg-body-tertiary rounded" }))
            {
                <div id="Tabele">
                    <div>
                        <h4 id="input">ALLE Profil Doppelzylinder</h4>
                    </div>

                    <div id="Table">

                        <div class="Thead">
                            <h5>Name</h5>
                        </div>

                        <div class="Thead">
                            <h5> Bearbeiten</h5>
                        </div>

                        <div class="Thead">
                            <h5>Löschen</h5>
                        </div>

                        @foreach (var item in ViewBag.item)
                        {
                            i++;

