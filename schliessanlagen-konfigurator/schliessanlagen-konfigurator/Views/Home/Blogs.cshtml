            color: black;
        }

    li:hover {
        background-color: #e4e4e4;
    }

    form {
        background: #F9F9F9;
        padding: 30px;
        border-radius: 10px;
    }

    #Table{
       grid-template-columns:repeat(3,auto)
    }
    .list-group-item.active {
        z-index: 2;
        color: #fff;
        background-color: #a1c5fa;
        border-color: #0d6efd;
    }

