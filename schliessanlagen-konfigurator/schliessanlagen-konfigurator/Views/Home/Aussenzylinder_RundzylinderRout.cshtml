@model schliessanlagen_konfigurator.Models.Aussenzylinder_Rundzylinder;
@{
    ViewData["Title"] = "Aussenzylinder Rundzylinder";
}

<div class="text-center ">
    <div id="myModal_NewSchliessanlagen" class="d-grid gap-3">
        <div id="routBAR">
            <div id="Bar">
                <button class="btn btn-primary"><a href="@Url.Action("Index","Home")">Profil-Doppelzylinder</a></button>
                <button class="btn btn-secondary"><a href="@Url.Action("Profil_HalbzylinderRout","Home")">Profil-Halbzylinder</a></button>
                <button class="btn btn-success"><a href="@Url.Action("Profil_KnaufzylinderRout","Home")">Profil-Knaufzylinder</a></button>
                <button class="btn btn-danger"><a href="@Url.Action("HebelzylinderRout","Home")">Hebelzylinder</a></button>
                <button class="btn btn-warning"><a href="@Url.Action("VorhangschlossRout","Home")">Vorhangschloss</a></button>
            </div>
        </div>
        <div>
            <h2>Add new Aussenzylinder \ Rundzylinder</h2>
            @using (Html.BeginForm("Create_Aussenzylinder_Rundzylinder", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <label>Zylinder Typen</label>

                @Html.DropDownListFor(model => model.schliessanlagenId,
                        new List<SelectListItem> {
                        new SelectListItem {  Value = "14",Text="Aussenzylinder / Rundzylinder" }
                        },
                         new { @class = " form-select", @id = "select" })
                
                 <div id="createColum">

                    <label>Name</label>
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

                    <label>Cost</label>
                    @Html.EditorFor(m => m.Cost, new { htmlAttributes = new { @class = "form-control" } })

                    <label> Artikelnummer</label>
                    @Html.EditorFor(m => m.Artikelnummer, new { htmlAttributes = new { @class = "form-control" } })
               
                    <label>Count</label>
                    @Html.EditorFor(m => m.Count, new { htmlAttributes = new { @class = "form-control" } })

                    <label asp-for="ImageFile"  class="control-label"></label>

                    <input asp-for="ImageFile" class="btn btn-success" accept="image/*" />
                    <span asp-validation-for="ImageFile"  class="text-danger"></span>
               
                    @Html.ValidationMessageFor(m => m.ImageFile, "", new { @class = "error" })

               </div>
                <input type="submit" class="btn btn-success" id="input" value="Create Aussenzylinder \ Rundzylinder" />
                <hr />
            }
        </div>

    </div>
    <div>

        @using (Html.BeginForm("Aussenzylinder_RundzylinderRout", "Home", FormMethod.Get))
        {
            <table class="table table-bordered">
                <tr>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Cost</th>
                    <th>Artikelnummer</th>
                    <th>Edit</th>
                    <th>Options</th>
                    <th>Delete</th>
                </tr>
                @foreach (var item in ViewBag.item)
                {
                    <tr>
                        <td id="rowTable" class="table-info">@item.Name</td>
                        <td id="rowTable" class="table-info"> <img decoding="async" src="@("~/image/"+@item.ImageName)" asp-append-version="true" width="50px" height="50px" /></td>
                        <td id="rowTable" class="table-info">@item.Cost</td>
                        <td id="rowTable" class="table-info">@item.Artikelnummer</td>
                        <td id="rowTable" class="table-info"><a href="@Url.Action("Edit_Aussenzylinder_Rundzylinder","Home", new { item.Id })"><img src="@("/Image/edit-tools.png")" height="30" width="30" /></a></td>
                        <td id="rowTable" class="table-info">
                            <a class="compItem" href="@Url.Action("DetailsAussenzylinder_Rundzylinder","Home", new { item.Id })">
                            <img src="@("/Image/options.png")" height="30" width="30" />
                                </a></td>
                        <td id="rowTable" class="table-info"><a href="@Url.Action("Delete_Doppelzylinder","Home", new { item.Id })"><img src="@("/Image/entfernen.png")" height="30" width="30" /></a></td>
                    </tr>
                }
            </table>
        }

    </div>
</div>

<script>

    let sum = document.querySelectorAll('#cost');
    function interfaice() {
        sum.forEach((item) => {
            if (String(item).length < 6) {
                item.innerHTML = item.innerHTML.slice(0, 5) + '€';
            }

            if (String(item).length > 8) {
                item.innerHTML = item.innerHTML.slice(0, 6) + '€';
            }

            console.log(String(item).length);
        })
    }
    interfaice();

    let selectType = document.getElementById('select');

    let textBox = document.querySelectorAll('.text-box single-line');

    function start() {
        for (let i = 0; i > selectType; i++)
            selectType[i].classList.add("form-control");
    }
    start();
    selectType.addEventListener('change', () => {

    });


    let myModal_NewSchliessanlagen = document.getElementById('myModal_NewSchliessanlagen');
    document.addEventListener('keydown', (event) => {
        if (event.code == 'F8') {
            myModal_NewSchliessanlagen.style.display = 'block';
        }
    })
    document.addEventListener('keyup', (event) => {
        if (event.code == 'Esc') {
            myModal_NewSchliessanlagen.style.display = 'none';
        }
    })

</script>