<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Schliessanlagen Konfigurator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
     <link rel="icon" type="image/x-icon" loading="lazy" href="@("/Image/SD_Logo.svg")" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-xl navbar-toggleable-xl navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-action="IndexKonfigurator" asp-controller="Konfigurator"> <img loading="lazy" src="@("/Image/SD_Logo.svg")" height="60" width="60" alt="schliessanlagen.discount" /> Schliessanlagen Konfigurator</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div style="margin-left:100px" class="navbar-collapse collapse d-xl-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Produktbearbeitung</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AllOrders">Auftragsbearbeitung</a>
                                </li>
                            }


                        <li class="nav-item">
                            <a class="nav-link text-dark" href=" @Url.Action("IndexKonfigurator", "Konfigurator")">Konfigurator</a>
                        </li>                      
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        
    </header>
    <div class="page-wrapper">
        <div class="content">
            @RenderBody()
        </div>

        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 mt-2 p-2">
                        <img src="@Url.Content("~/Image/basi.png")" alt="Basi" height="60" width="120" />
                    </div>
                    <div class="col-md-4 mt-2 p-2">
                        <img src="@Url.Content("~/Image/ces.png")" alt="CES" height="40" width="40" style="margin-left:10px" />
                        <br />
                        <div style="margin-top:20px">
                            <li><a onclick="sendInfo(event.target.textContent)">UDM5</a></li>
                            <li><a onclick="sendInfo(event.target.textContent)">RHM5</a></li>
                            <li><a onclick="sendInfo(event.target.textContent)">DU5</a></li>
                            <li><a onclick="sendInfo(event.target.textContent)">WO5</a></li>
                        </div>
                    </div>
                    <div class="col-md-4 mt-2 p-2">
                        <img src="@Url.Content("~/Image/logo_abus.png")" alt="ABUS" height="80" width="60" />
                    </div>
                    <div class="col-md-4 mt-2 p-2">
                        <img src="@Url.Content("~/Image/logo_evva.png")" alt="EVVA" height="80" width="60" />
                    </div>
                </div>
                <hr style="height: 3px;">
                <h2><a href="@Url.Action("Impressum", "Home")">Impressum</a></h2>
            </div>
        </div>
    </div>
       
   
    <script src="~/lib/tinymce_7.1.2/tinymce/js/tinymce/tinymce.min.js"></script>
     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" async></script>
    <script src="~/lib/jquery/dist/jquery.min.js" async></script>
  
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
