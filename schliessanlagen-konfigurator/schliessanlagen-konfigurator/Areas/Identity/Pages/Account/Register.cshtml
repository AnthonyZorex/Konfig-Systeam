@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="shadow-lg  mb-5 bg-body-tertiary rounded" id="registerPage">
    <div class="col-lg-6 mx-auto p-3">
        
        <div id="register_header">
            <h2 class="text-center mb-3 ">Register</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
           
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">First Name</label>
                <div class="col-sm-8">
                    <input  asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" name="returnUrl"  id="returnUrl"/>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Last Name</label>
                <div class="col-sm-8">
                    <input  asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
              
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                <input  asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone</label>
                <div class="col-sm-8">
                    <input  asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                 <input  asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                <input asp-for="Input.Password" class="form-control"  />               
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ConfirmPassword</label>
                <div class="col-sm-8">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Subscribe to news</label>
                <div class="col-sm-8">
                    @Html.CheckBoxFor(model => model.Input.isSend, new { @class = "form-check-input" })
                    <span asp-validation-for="Input.isSend" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
              <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-outline-success">Register</button>
              </div> 
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-danger" href="/" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    
</div>
<script>
    let returnUrl = document.getElementById("returnUrl");
    function back()
    {       
        returnUrl.value = localStorage.getItem('currentURL');
    }
    back()
</script>