    .step-progress {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        flex-wrap: wrap; /* Даем возможность переноса элементов на меньших экранах */
    }

    .step {
        position: relative;
        text-align: center;
        padding: 10px;
        background-color: #ddd;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
        min-width: 120px; /* Ограничиваем минимальную ширину для каждого шага */
        margin: 5px; /* Добавляем немного пространства между шагами */
        flex-grow: 1; /* Растягиваем шаги, чтобы они заполняли пространство */
    }

        .step::before {
            content: "";
            position: absolute;
            top: 50%;
            left: -20px;
            width: 20px;
            height: 20px;
            background-color: #ddd;
            border-radius: 50%;
            transform: translateY(-50%);
            transition: background-color 0.3s ease;
        }

        .step:first-child::before {
            left: 0;
        }

    .step-active {
        background-color:var(--primary-color);
        color: white;
    }

        .step-active::before {
            background-color: var(--primary-color);
        }

    .step-completed {
        background-color: #198754;
        color: white;
    }

        .step-completed::before {
            background-color: #198754;
        }

    .step:not(:last-child)::after {
        content: "";
        position: absolute;
        top: 50%;
        left: 100%;
        width: 100%;
        height: 2px;
        background-color: #ddd;
        transform: translateY(-50%);
        transition: background-color 0.3s ease;
    }

    .step-form {
        display: none;
    }

        .step-form.active {
            display: block;
        }

    .step-active + .step::after,
    .step-completed + .step::after {
        background-color: #28a745;
    }

</style>

